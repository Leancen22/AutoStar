generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

model Car {
  id                Int        @id @default(autoincrement())
  title             String
  image             String
  description       String
  tag               String
  price             Float
  category          String
  model             String
  year              Int
  km                Int
  features          String[]   // Array de strings
  specifications    Json       // Objeto JSON para especificaciones
  gallery           String[]   // Array de strings para im√°genes
  youtubeUrl        String[]   @default([]) // Array de strings
  financingOptions  Json       // Array de objetos JSON
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
}